<div class="grid-container">
    {{#each links}}
        <div class="grid-card">
            <a href="https://{{url}}" target="_blank">
                <h3>{{title}}</h3>
            </a>
            <p>{{description}}</p>
            <p>{{timeago created_at}}</p>
            <a href="/links/edit/{{idLink}}">Edit</a>
            <a href="/links/delete/{{idLink}}">Delete</a>
        </div>
        {{else}}
            <div class="grid-card">
                <p>there are not favorites links yet</p>
                <a href="/links/add">Create One</a>
            </div>
    {{/each}}
</div>